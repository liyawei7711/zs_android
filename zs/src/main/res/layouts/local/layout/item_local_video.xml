<?xml version="1.0" encoding="utf-8"?>
<com.zs.common.views.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_marginTop="0.5dp"
    android:background="@color/black666"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_status_choosed_no"
            android:visibility="gone"
            tools:ignore="ContentDescription" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_video"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_video_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/black333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_video_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <FrameLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/pb_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="30dp"
                android:layout_height="8dp"
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:progressDrawable="@drawable/layerlist_progressbar_hengxiang"/>

            <ImageView
                android:id="@+id/iv_upload"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:singleLine="true"
                android:src="@drawable/zs_local_upload"
                android:textSize="16sp" />

        </FrameLayout>

    </LinearLayout>

</com.zs.common.views.CheckableLinearLayout>