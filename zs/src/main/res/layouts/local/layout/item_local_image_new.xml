<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_marginTop="0.5dp"
    android:gravity="center_vertical"
    android:background="@color/black666"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_status_choosed_no"
            tools:ignore="ContentDescription" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/zs_seeting_zp"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_image_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="asdasdasdasd"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_image_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <FrameLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/pb_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="30dp"
                android:layout_height="8dp"
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:layout_centerHorizontal="true"
                android:progressDrawable="@drawable/layerlist_progressbar_hengxiang"/>

            <FrameLayout
                android:layout_gravity="center"
                android:id="@+id/iv_upload"
                android:layout_marginLeft="10dp"
                android:layout_width="40dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:singleLine="true"
                    android:src="@drawable/zs_local_upload"
                    android:textSize="16sp" />
            </FrameLayout>

        </FrameLayout>

</LinearLayout>