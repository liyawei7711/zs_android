<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black333"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_current_version"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/black666"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="当前版本"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_new_version"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="1dp"
        android:background="@color/black666"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="最新版本:"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_size"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="1dp"
        android:background="@color/black666"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="大小:无需更新"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="1dp"
        android:background="@color/black666"
        android:minHeight="100dp"
        android:padding="15dp"
        android:text="更新内容:无需更新"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_sure"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/all_blue_shapke_corners"
        android:gravity="center"
        android:text="更新"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>