<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/ptt_key"
                android:textColor="@color/black666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_ptt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_border_key"
                android:gravity="center_vertical"
                android:hint="@string/start_ptt_key"
                android:textColor="@color/black333"
                android:textColorHint="@color/black333"
                android:paddingLeft="15dp"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/sos_key"
                android:textColor="@color/black666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_sos"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_border_key"
                android:gravity="center_vertical"
                android:hint="@string/start_sos_key"
                android:textColor="@color/black333"
                android:textColorHint="@color/black333"
                android:paddingLeft="15dp"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/camera_key"
                android:textColor="@color/black666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_camera"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_border_key"
                android:gravity="center_vertical"
                android:hint="@string/start_camera_key"
                android:textColor="@color/black333"
                android:textColorHint="@color/black333"
                android:paddingLeft="15dp"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/video_key"
                android:textColor="@color/black666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_video"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_border_key"
                android:gravity="center_vertical"
                android:hint="@string/start_video_key"
                android:textColor="@color/black333"
                android:textColorHint="@color/black333"
                android:paddingLeft="15dp"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/ptt_channel_left"
                android:textColor="@color/black666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_ptt_channel_left"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_border_key"
                android:gravity="center_vertical"
                android:hint="@string/start_ptt_left_key"
                android:textColor="@color/black333"
                android:textColorHint="@color/black333"
                android:paddingLeft="15dp"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/ptt_channel_right"
                android:textColor="@color/black666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_ptt_channel_right"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_border_key"
                android:gravity="center_vertical"
                android:hint="@string/start_ptt_right_key"
                android:textColor="@color/black333"
                android:textColorHint="@color/black333"
                android:paddingLeft="15dp"
                android:textSize="16sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/tv_clear"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_login_white_bg"
                    android:gravity="center"
                    android:text="@string/qingchu_txt"
                    android:textColor="@color/blue2"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_save"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_blue_button_bg"
                    android:gravity="center"
                    android:text="@string/save_change"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>