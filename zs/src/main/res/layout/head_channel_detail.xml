<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/pindaoxiangqing_bg"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="150dp" />
        <TextView
            android:layout_marginTop="40dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:textColor="@color/black666"
            android:text="@string/channel_detail_all_user"
            android:layout_width="match_parent"
            android:layout_height="45dp" />
        <View
            android:background="@color/back_gray"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/shape_white_concer"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="22dp"
        android:paddingBottom="22dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_1"
            android:drawableLeft="@drawable/ico_mingchen"
            tools:text="频道名称: 第一下偶滴"
            android:drawablePadding="10dp"
            android:textSize="15dp"
            android:textColor="@color/black333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_2"
            android:drawableLeft="@drawable/ico_id"
            tools:text="频道名称: 第一下偶滴"
            android:drawablePadding="10dp"
            android:textSize="15dp"
            android:layout_marginTop="17dp"
            android:textColor="@color/black333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_3"
            android:drawableLeft="@drawable/ico_shichang"
            tools:text="频道名称: 第一下偶滴"
            android:drawablePadding="10dp"
            android:layout_marginTop="17dp"
            android:textSize="15dp"
            android:textColor="@color/black333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</FrameLayout>
