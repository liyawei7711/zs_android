<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="17dp">

    <LinearLayout
        android:id="@+id/ll_info_wrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_type_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="17dp"
            android:drawableLeft="@drawable/tip_xingming"
            android:drawablePadding="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="张三"
            android:textColor="@color/black333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:visibility="gone"
            android:layout_marginRight="20dp"
            android:layout_marginTop="7.5dp"
            android:drawableLeft="@drawable/tip_zuobiao"
            android:drawablePadding="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="位置位置"
            android:textColor="@color/black333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_lat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="7.5dp"
            android:drawableLeft="@drawable/tip_jingweidu"
            android:drawablePadding="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="位置位置"
            android:textColor="@color/black333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="39dp"
            android:layout_marginTop="7.5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="位置位置"
            android:textColor="@color/black999"
            android:textSize="10sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="17dp">

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/yuyin"
            android:gravity="center_horizontal"
            android:text="@string/talk_diaodu_txt"
            android:textColor="@color/selector_contact_menu_textcolor"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_video"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/shipin"
            android:gravity="center_horizontal"
            android:text="@string/video_diaodu_txt"
            android:textColor="@color/selector_contact_menu_textcolor"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_meet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/huiyi"
            android:gravity="center_horizontal"
            android:text="@string/meet_diaodu_txt"
            android:textColor="@color/selector_contact_menu_textcolor"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_watch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/shipinchakan"
            android:gravity="center_horizontal"
            android:text="@string/video_watch_txt"
            android:textColor="@color/selector_contact_menu_textcolor"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_zhihui"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/zhiling"
            android:gravity="center_horizontal"
            android:text="@string/zhiling_diaodu_txt"
            android:textColor="@color/selector_contact_menu_textcolor"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>