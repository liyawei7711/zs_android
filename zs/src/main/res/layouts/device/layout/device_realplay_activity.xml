<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextureView
        android:id="@+id/texture_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/background_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true">

        <com.zs.ui.device.ToyView
            android:id="@+id/cruise_button"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="10dp"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_slient"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="12dp"
            android:duplicateParentState="true"
            android:src="@drawable/btn_mianti"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_quality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:background="@drawable/shape_black_board_dark"
            android:gravity="center"
            android:padding="8dp"
            android:text="质量"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/iv_fangda"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="12dp"
            android:duplicateParentState="true"
            android:src="@drawable/btn_fangda"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/iv_suoxiao"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="12dp"
            android:duplicateParentState="true"
            android:src="@drawable/btn_suoxiao"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_quality"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="75dp"
        android:background="@drawable/shape_black_radius"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_main_quality"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="主码流"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#b8b8b8" />

        <TextView
            android:id="@+id/tv_sub_quality"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="辅码流"
            android:textColor="@color/text539bf0"
            android:textSize="14sp" />
    </LinearLayout>
</FrameLayout>