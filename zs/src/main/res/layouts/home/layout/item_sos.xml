<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/yijianqiuzhu_diaodutai" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_sos_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:text="123456"
                android:textColor="@color/black333"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/tv_sos_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_mark_name"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="123456"
                android:textColor="@color/black999"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_busy"
            android:text="在忙"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff2400"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_call"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/sos_call"
            android:background="@drawable/shape_fe7201"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="45dp"
        android:background="@color/back_gray" />

</LinearLayout>