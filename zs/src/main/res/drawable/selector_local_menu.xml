<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">

        <layer-list>

            <item
                android:left="12dp"
                android:right="12dp">
                <shape>
                    <solid android:color="@color/green"/>
                </shape>
            </item>

            <item
                android:bottom="2dp">
                <shape>
                    <solid android:color="@color/black333"/>
                </shape>
            </item>


        </layer-list>

    </item>

    <item>
        <shape>
            <solid android:color="@color/black333"/>
        </shape>
    </item>

</selector>